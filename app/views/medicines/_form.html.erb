    <div class="form-group">
      <label for="price">price:</label>
      <%=f.number_field :price,:class=>"form-control",:placeholder=>"Re-Enter price"%>
    </div>
     <div class="form-group">
      <label for="expiry_date">expiry date:</label>
      <%=f.date_select :expiry_date,:class=>"form-control",:placeholder=>"Re-Enter date"%>
