      <ul>
      <% @medicine.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
      <label for="name">Name:</label>
      <%=f.text_field :name,:class=>"form-control",:placeholder=>"Enter Name"%>
