
 <div class="container">

 <%= form_for @user_session, url: user_sessions_path, method: :post, html: { class: 'form-horizontal', role: 'form' } do |f| %>  

 <% if @user_session.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <p><%= pluralize(@user_session.errors.count, "error") %>  can not be save saved:</p>

      <ul>
      <% @user_session.errors.full_messages.each do |message| %>
        <div class="alert alert-danger">
          <li><%= message %></li>
      </div>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
      <label for="title">Email:</label>
      <%=f.text_field :email,:class=>"form-control",:placeholder=>"Enter Email"%>
  </div>
  <div class="form-group">
      <label for="title">Password:</label>
      <%=f.password_field :password,:class=>"form-control",:placeholder=>"Enter Password"%>
  </div>
  <%= f.submit 'Login',:class=>"btn btn-default" %>
  <% end %>
  <br/>
  <%=link_to 'Sign_up',new_user_path, :class=>"btn btn-success"%>
   

</div>
 
 